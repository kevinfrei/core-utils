{
  "name": "@freik/core-utils",
  "version": "1.0.0",
  "description": "Core set of TS/JS helper utilities (node & www)",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/kevinfrei/core-utils/issues"
  },
  "homepage": "https://github.com/kevinfrei/core-utils#readme",
  "keywords": [
    "js-utils"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinfrei/core-utils.git"
  },
  "module": "./lib/esm/index.js",
  "main": "./lib/cjs/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "watch": "jest --watch --config jestconfig.json",
    "clean": "rimraf lib && rimraf \".*.tsbuildinfo\"",
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
    "cleanbuild": "yarn clean && yarn build",
    "dbg": "yarn clean && tsc --sourceMap true --project tsconfig.cjs.json && tsc --sourceMap true --project tsconfig.esm.json",
    "postinstall": "husky install",
    "prepublishOnly": "yarn test && yarn lint && pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "yarn cleanbuild",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\" \"*.json\" \".vscode/*.json\"",
    "lint": "eslint --fix --ext .ts src",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit --project tsconfig.cjs.json && tsc --noEmit --project tsconfig.esm.json",
    "chk": "yarn format && yarn lint && yarn compile && yarn test",
    "doc": "typedoc ./src/index.ts --tsconfig tsconfig.esm.json"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.1.6",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.22.7",
    "typedoc-plugin-markdown": "^3.11.3",
    "typescript": "^4.4.4"
  },
  "files": [
    "lib/*/*"
  ],
  "engines": {
    "node": "^14.13.1 || >= 16.0.0"
  }
}
