{
  "name": "@freik/core-utils",
  "version": "0.27.3",
  "description": "FTON and ObjUtil helpers",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "private": false,
  "bugs": {
    "url": "https://github.com/kevinfrei/core-utils/issues"
  },
  "homepage": "https://github.com/kevinfrei/core-utils#readme",
  "keywords": [
    "js-utils"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinfrei/core-utils.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "watch": "jest --watch --config jestconfig.json",
    "build": "rimraf lib && tsc && minify -i lib",
    "prepare": "yarn build",
    "postinstall": "husky install",
    "prepublishOnly": "yarn test && yarn lint && pinst --disable",
    "postpublish": "pinst --enable",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\" \"*.json\" \".vscode/*.json\"",
    "lint": "eslint --fix --ext .ts src",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit",
    "chk": "yarn format && yarn lint && yarn compile && yarn test"
  },
  "devDependencies": {
    "@freik/build-tools": "^2.8.2",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "eslint": "^7.26.0",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "pinst": "^2.1.6",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.2.4"
  },
  "files": [
    "lib/**/*"
  ]
}
