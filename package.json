{
  "name": "@freik/core-utils",
  "version": "1.4.0",
  "description": "Core set of TS/JS helper utilities (node & www)",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/kevinfrei/core-utils/issues"
  },
  "homepage": "https://github.com/kevinfrei/core-utils#readme",
  "keywords": ["js-utils"],
  "repository": "github:kevinfrei/core-utils",
  "module": "./lib/esm/index.js",
  "main": "./lib/cjs/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "watch": "jest --watch --config jestconfig.json",
    "clean": "rimraf lib .*.tsbuildinfo",
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
    "cleanbuild": "yarn clean && yarn build",
    "dbg": "yarn clean && tsc --sourceMap true --project tsconfig.cjs.json && tsc --sourceMap true --project tsconfig.esm.json",
    "postinstall": "husky install",
    "prepublishOnly": "yarn test && yarn lint && yarn pinst --disable",
    "postpublish": "yarn pinst --enable",
    "prepare": "yarn cleanbuild",
    "format": "yarn run prettier -w package.json src/**/*.ts",
    "lint": "eslint --fix --ext .ts src",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit --project tsconfig.cjs.json && tsc --noEmit --project tsconfig.esm.json",
    "chk": "yarn format && yarn lint && yarn compile && yarn test",
    "doc": "typedoc ./src/index.ts --readme none --tsconfig tsconfig.esm.json"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.4.10",
    "@freik/core-utils": "^1.3.5",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.28",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^5.0.2"
  },
  "files": ["lib/**/*"],
  "engines": {
    "node": "^14.13.1 || >= 16.0.0"
  },
  "packageManager": "yarn@3.5.0"
}
